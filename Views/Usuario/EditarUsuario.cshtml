@model Usuario

<h1>Realize a edição do Usuário</h1>
<form action="EditarUsuario" method="post">
  <input type="text" name="NomeUsuario" id="userNomeUsuario" value="@Model.NomeUsuario">
  <input type="text" name="Login" id="userLogin" value="@Model.Login">
  <input type="text" name="SenhaUsuario" id="userSenhaUsuario" value="@Model.SenhaUsuario">

  <select name="Tipo" id="userTipo">
    <option value="@Usuario.ADMIN">Administrador</option>
    <option value="@Usuario.USER">Padrão</option>
  </select>

  <input type="hidden" asp-for="Id" />

  <input type="submit" value="Concluir Edição" class="btn btn-warning">
</form> 