@model Usuario 

<h1>Fazer registro de Novo Usuário</h1>
<form action="RegistrarUsuario" method="post">
  <input type="text" name="NomeUsuario" id="userNome" placeholder="Nome">
  <input type="text" name="Login" id="userLogin" placeholder="Login">
  <input type="text" name="SenhaUsuario" id="userSenha" placeholder="Senha">

  <select name="Tipo" id="userTipo">
    <option value="@Usuario.ADMIN">Administrador</option>
    <option value="@Usuario.USER">Padrão</option>
  </select>

  <input type="submit" value="Registrar" class="btn btn-success">
</form> 